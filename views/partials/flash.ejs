<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-center align-items-center" role="alert">
        <strong class="font-weight-bold"><%= success %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-center align-items-center" role="alert">
        <strong class="font-weight-bold"><%= error %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
