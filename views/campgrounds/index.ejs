<% layout('layouts/boilerplate') %>
<h1 class="mb-3">All Campgrounds</h1>
<!-- <div>
    <a href="/campgrounds/new"><button class="btn btn-success">Add new Campground!</button></a>
</div> -->
<% for (let campground of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (campground.images.length > 0) { %>
                    <img crossorigin="anonymous" class="img-fluid" alt="" src="<%= campground.images[0].url %>">
                <% } else { %>
                    <img crossorigin="anonymous" class="img-fluid" alt="default" src="https://res.cloudinary.com/dyc5oi3gi/image/upload/v1702316677/Camp/rqrdldmk9q1ooocrhazq.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                    <p class="card-text">
                        <small class="text-light-emphasis">
                            <%= campground.location %>
                        </small>
                    </p>
                    <a class="btn btn-sm btn-primary" href="/campgrounds/<%= campground._id %>">View <%= campground.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>
