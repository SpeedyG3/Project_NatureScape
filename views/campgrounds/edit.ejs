                <div class="mb-3">
                    ejs campground.images.forEach(function(img, i){ ejs
                        <img src="ejs= img.thumbnail ejs" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-ejs= i ejs" name="deleteImages[]" value="ejs= img.filename ejs">
                        </div>
                        <label for="image-ejs= i ejs"></label>
                    ejs }) ejs
                </div> -->

                <!-- with bootstrap making images to be thumbnails. image for more info in screenshots -->
                <h6>Select Images to be Deleted</h6>
                <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                    <% campground.images.forEach((image, i)=> { %>
                        <div class="col">
                            <div class="card">
                                <label for="image-<%= i %>"><img class="card-img" src="<%= image.url %>" alt="">
                                    <div class="card-img-overlay text-end pt-1 pe-2">
                                        <input class="form-check-input" type="checkbox" name="deleteImages[]"
                                            value="<%= image.filename %>" id="image-<%= i %>">
                                    </div>
                                </label>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground!</button>
                </div>
            </form>
            <div class="mb-3">
                <a href="/campgrounds/<%=campground._id%>"><button class="btn btn-danger">Cancel</button></a>
            </div>
        </div>
    </div>